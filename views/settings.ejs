<%- include("layout", { cartCount: cartCount }) %>

<section class="section active gothic">
  <h1 class="text-center gothic-title">Settings ⚙️</h1>
  <form method="POST" action="/settings/update" class="settings-form">
    <label>Theme</label>
    <select name="theme">
      <option value="gothic">Gothic</option>
      <option value="light">Light</option>
      <option value="dark">Dark</option>
    </select>

    <label>Currency</label>
    <select name="currency">
      <option value="USD">USD</option>
      <option value="EUR">EUR</option>
      <option value="TRY">TRY</option>
    </select>

    <label>Language</label>
    <select name="language">
      <option value="en">English</option>
      <option value="tr">Türkçe</option>
    </select>

    <button type="submit" class="btn gothic-btn">Save</button>
  </form>
</section>
